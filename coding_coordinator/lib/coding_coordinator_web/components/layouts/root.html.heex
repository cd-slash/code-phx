<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="CodingCoordinator" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <script>
      (function() &lbrace;
        const getTheme = function() &lbrace;
          try &lbrace;
            return localStorage.getItem("phx:theme") || "system";
          &rbrace; catch &lbrace;
            return "system";
          &rbrace;
        &rbrace;;

        const applySystemTheme = function() &lbrace;
          const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          return prefersDark ? "dark" : "light";
        &rbrace;;

        const setTheme = function(theme) &lbrace;
          const html = document.documentElement;
          if (theme === "system") &lbrace;
            try &lbrace;
              localStorage.removeItem("phx:theme");
            &rbrace; catch &lbrace;
            &rbrace;
            const systemTheme = applySystemTheme();
            html.removeAttribute("data-theme");
            html.setAttribute("data-theme", systemTheme);
          &rbrace; else &lbrace;
            try &lbrace;
              localStorage.setItem("phx:theme", theme);
            &rbrace; catch &lbrace;
            &rbrace;
            html.setAttribute("data-theme", theme);
          &rbrace;
        &rbrace;;

        const theme = getTheme();
        setTheme(theme);

        window.addEventListener("storage", function(e) &lbrace;
          if (e.key === "phx:theme") &lbrace;
            setTheme(e.newValue || "system");
          &rbrace;
        &rbrace;);

        window.addEventListener("phx:set-theme", function(e) &lbrace;
          setTheme(e.detail);
        &rbrace;);

        // Listen for system theme changes
        window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", function(e) &lbrace;
          const currentTheme = getTheme();
          if (currentTheme === "system") &lbrace;
            setTheme("system");
          &rbrace;
        &rbrace;);
      &rbrace;)();
    </script>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
  </head>
  <body>
    {@inner_content}
  </body>
</html>
